{
  "name": "fragfinder",
  "productName": "Fragfinder",
  "version": "2.0.2",
  "description": "Electron App",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "publish": "electron-builder -p never",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Arad119",
  "license": "GPL-3.0-only",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "images/logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fragfinder"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@akiver/cs-demo-analyzer": "^1.5.2",
    "electron-is-dev": "^2.0.0",
    "electron-progressbar": "^2.0.1",
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.3.0",
    "@electron-forge/maker-deb": "^7.3.0",
    "@electron-forge/maker-rpm": "^7.3.0",
    "@electron-forge/maker-squirrel": "^7.3.0",
    "@electron-forge/maker-zip": "^7.3.0",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "Arad119",
        "repo": "Fragfinder-GUI"
      }
    ],
    "appId": "Fragfinder",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "images/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "images/logo.ico",
      "uninstallerIcon": "images/logo.ico",
      "uninstallDisplayName": "Fragfinder Uninstaller",
      "allowToChangeInstallationDirectory": true
    },
    "extraFiles": [
      {
        "from": "node_modules/@akiver/cs-demo-analyzer/dist/bin/windows-x64/csda.exe",
        "to": "resources/csda.exe"
      }
    ]
  }
}
